{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-unused-vars": "off",
        "react/button-has-type": "off",
        "react/require-default-props": "off",
        "import/prefer-default-export": "off",
        "prettier/prettier": [
            "error", {
                "printWidth": 160,
                "trailingComma": "es5",
                "semi": true,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "useTabs": true,
                "endOfLine": "auto",
                "max-len": ["error", { "code": 80 }],
                "importOrder": [
                  "^react(.*)$",
                  "<THIRD_PARTY_MODULES>",
                  "./types",
                  "^[.](?!.*.(scss|css)$).*$",
                  "(.*).(scss|css)$"
                ],
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true
            }
        ],
        "jsx-a11y/label-has-associated-control": [ 
            2, {
            "controlComponents": ["Input", "TextArea"],
            "depth": 2
          }
        ],
        "no-duplicate-imports": "error"
    }
}